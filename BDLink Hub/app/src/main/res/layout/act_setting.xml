<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Act_Setting"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <include
            android:id="@+id/back"
            layout="@layout/lay_back_button"/>

        <!-- profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#fff"
            android:layout_margin="10dp"
            android:layout_below="@id/back"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_profile_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="প্রোফাইল সেটিংস"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_down"
                    android:drawableStart="@drawable/ic_edit_profile"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- profile  -->

        <!-- edit password & email & name $ delete account -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_edit_password_and_name_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_below="@id/cv_profile"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- password change-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_password_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="পাসওর্য়াড পরিবর্তন"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="28dp"
                    android:paddingEnd="28dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3C8F6363"
                    android:layout_gravity="center"
                    />

                <!-- name change-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="নাম পরিবর্তন"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="28dp"
                    android:paddingEnd="28dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3C8F6363"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ডিলিট একাউন্ট"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_delete2"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="28dp"
                    android:paddingEnd="28dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- edit password & email & name -->

        <!-- support and sing out and theme -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_support_and_sing_out_and_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#fff"
            android:layout_margin="10dp"
            android:layout_below="@id/cv_edit_password_and_name_email"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="অ্যাপ থিম"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_theme"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3C8F6363"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="হেল্প &amp; সার্পোট"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_support"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3C8F6363"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sing_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="সাইন আউট"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <!-- support and sing out and theme -->

        <!-- delete history and delete link -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_clear_history_and_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#fff"
            android:layout_margin="10dp"
            android:layout_below="@id/cv_support_and_sing_out_and_theme"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_clear_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ডিলিট সার্চ ডাটা"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_delete_history"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3C8F6363"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ডিলিট সেভ লিংক"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawableStart="@drawable/ic_delete2"
                    android:drawablePadding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- delete history and delete link -->

    </RelativeLayout>


</RelativeLayout>