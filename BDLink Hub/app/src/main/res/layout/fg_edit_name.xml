<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Fg_edit_name"
    android:id="@+id/main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- name -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আপনার নতুন নাম দিন। (৩০ অক্ষরের মধ্যে)"
            android:textColor="#000"
            android:textSize="17sp"
            android:fontFamily="@font/noto_serif"
            android:layout_margin="10dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:endIconMode="clear_text"
            app:cursorColor="#03A9F4"
            app:counterEnabled="true"
            app:counterMaxLength="30"

            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="নাম......"
                android:fontFamily="@font/noto_serif"
                android:textSize="17sp"
                android:textColor="#000"
                android:textColorHint="#867676"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:inputType="textPersonName"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <!-- name -->

        <!-- email address -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আপনার ইমেইল ঠিকানা দিন।"
            android:textSize="17sp"
            android:textColor="#000"
            android:fontFamily="@font/noto_serif"
            android:layout_margin="10dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:endIconMode="clear_text"
            app:cursorColor="#03A9F4"

            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ইমেইল ঠিকানা......"
                android:fontFamily="@font/noto_serif"
                android:textSize="17sp"
                android:textColor="#000"
                android:textColorHint="#867676"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <!-- email address -->

        <!-- submit button -->

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"

            >

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_submit_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="সাবমিট"
               android:textSize="17sp"
               android:fontFamily="@font/noto_serif"
               android:textColor="#000"
               android:padding="14dp"
               android:background="?attr/selectableItemBackground"
               android:gravity="center"
               android:layout_gravity="center"
               />

        </androidx.cardview.widget.CardView>

        <!-- submit button -->

        <!-- progress bar -->

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            />

        <!-- progress bar -->

    </LinearLayout>

</RelativeLayout>