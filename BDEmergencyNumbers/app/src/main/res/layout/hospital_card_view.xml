<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:backgroundTint="#F0EBE4E4"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="হাসপাতালের নাম"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/noto_serif"

                />

            <TextView
                android:id="@+id/hospital_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="হাসপাতালের ঠিকানা"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/noto_serif"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/hospital_num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="হাসপাতালের নম্বর"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:drawableStart="@drawable/baseline_call_24"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    />


                <TextView
                    android:id="@+id/hospital_num2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="হাসপাতালের নম্বর"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@font/noto_serif"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/baseline_call_24"
                    android:layout_margin="4dp"
                    />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>